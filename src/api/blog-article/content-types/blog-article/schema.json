{
  "kind": "collectionType",
  "collectionName": "blog_articles",
  "info": {
    "singularName": "blog-article",
    "pluralName": "blog-articles",
    "displayName": "Blog Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "headline": {
      "type": "string",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "string",
      "regex": "^[a-z](-?[a-z])*$",
      "required": true,
      "unique": true
    },
    "author": {
      "type": "string",
      "required": true
    },
    "isHighlightArticle": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "articleContent": {
      "type": "dynamiczone",
      "components": [
        "blog-article.headline",
        "blog-article.paragraph-with-image",
        "blog-article.paragraph",
        "blog-article.landscape-image"
      ]
    }
  }
}
